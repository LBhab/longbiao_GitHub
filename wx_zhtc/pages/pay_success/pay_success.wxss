/* pages/pay_success/pay_success.wxss */

page {
  background: rgba(244, 244, 244, 1);
  font-size: 24rpx;
  padding-top: 20rpx;
  padding-bottom: 120rpx;
}

view.header {
  background: #fff;
  padding-top: 36rpx;
  position: relative;
}

view.header_body {
  width: 65%;
  margin: 0 auto;
  padding-bottom: 36rpx;
}

view.header_body>text {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: rgba(90, 152, 244, 1);
  margin-bottom: 33rpx;
}

view.order_number>text {
  font-weight: 500;
  color: rgba(76, 76, 76, 1);
}

view.price {
  position: absolute;
  top: 50rpx;
  right: 50rpx;
}

view.price>text {
  font-weight: bold;
  color: rgba(228, 0, 0, 1);
  font-size: 36rpx;
}

image.logo {
  display: block;
  height: 58rpx;
  width: 54rpx;
  position: absolute;
  left: 50rpx;
  top: 30rpx;
}

/* 二维码 失败*/

view.fali {
  padding-bottom: 60rpx;
}

text.worning {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  color: #fb4818;
  margin: 40rpx 0 20rpx 0;
}

view.wor_tps {
  width: 232rpx;
  margin: 0 auto;
  color: #999;
  font-size: 32rpx;
  font-weight: Medium;
}

view.wor_tps_ {
  width: 500rpx;
  margin: 0 auto;
  color: #999;
  font-size: 32rpx;
  font-weight: Medium;
}

image.fali {
  display: block;
  margin: 0 auto;
  height: 227rpx;
  width: 233rpx;
}

/* 二维码 成功*/

view.erweima {
  width: 95%;
  margin: 0 auto;
  margin-top: 24rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 10px;
  position: relative;
}

/**使用凭证*/

text.usePz {
  display: block;
  width: 100%;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  text-align: center;
  position: absolute;
  left: 0;
  top: 10rpx;
}

image.kuang {
  display: block;
  width: 100%;
  height: 100rpx;
}

/* 中间信息展示 */

view.discrible {
  width: 70%;
  margin: 0 auto;
  position: relative;
  padding: 30rpx 0rpx;
  /* border-bottom: 1rpx solid lightgray; */
}

view.discrible>text {
  font-weight: 500;
  color: rgba(30, 30, 30, 1);
  font-size: 30rpx;
}

view.discrible>view {
  margin-top: 19rpx;
  font-size: 26rpx;
}

view.date>text:first-child {
  font-weight: 500;
  color: rgba(97, 97, 97, 1);
}

view.date>text:last-child {
  font-weight: 500;
  color: red;
}

view.people>text:first-child {
  font-weight: 500;
  color: rgba(97, 97, 97, 1);
}

view.people {
  margin-bottom: 45rpx;
}

image.senc {
  position: absolute;
  left: -60rpx;
  top: 50rpx;
  display: block;
  height: 40rpx;
  width: 43rpx;
}

image.erweima_image {
  display: block;
  width: 324rpx;
  height: 327rpx;
  margin: 0 auto;
}

/* 温馨提示 */

view.tips {
  background: #fff;
  margin-top: 20rpx;
}

view.tips_body {
  width: 95%;
  margin: 0 auto;
  padding-bottom: 40rpx;
  padding-top: 34rpx;
  /* background: red; */
}

view.text_content {
  overflow: hidden;
  font-size: 26rpx !important;
}

view.text_content>view {
  float: left;
}

view.left {
  width: 20%;
  margin-right: 5%;
}

view.right {
  width: 70%;
}

text.informations {
  font-weight: 500;
  color: rgba(47, 47, 47, 1);
  font-size: 32rpx;
  margin-bottom: 38rpx;
}

view.left {
  color: #c0c0c0;
  margin-top: 32rpx;
}

view.right {
  margin-top: 32rpx;
}

/* 再次支付 */

view.pay_agin {
  height: 90rpx;
  background: linear-gradient(90deg, rgba(63, 106, 223, 1), rgba(73, 136, 224, 1), rgba(86, 166, 225, 1));
  border-radius: 40rpx;
  line-height: 90rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  font-size: 36rpx;
  /* position: absolute; */
  width: 678rpx;
  margin: 0 auto;
  /* bottom:300rpx; *//* left: 50%; *//* margin-left: -339rpx; */
  text-align: center;
  box-shadow: 0rpx 15rpx 30rpx 1rpx rgba(86, 166, 225, 1);
}

view.dianji {
  margin: 70rpx 0;
}

/**底部*/

view.backheader {
  background: linear-gradient(90deg, rgba(85, 164, 225, 1) 0%, rgba(63, 106, 223, 1) 100%);
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
  position: fixed;
  width: 100%;
  bottom: 0;
}

/***二维码放大图片***/

view.pictureimg {
  height: 100%;
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 20;
  background: rgba(0, 0, 0, 0.55);
}

image.bigPicture {
  display: block;
  position: fixed;
  height: 500rpx;
  width: 500rpx;
  top: 50%;
  left: 50%;
  margin-top: -250rpx;
  margin-left: -250rpx;
}
