/* pages/jieshao/jieshao.wxss */
page{
  background:rgba(244,244,244,1);
  padding-top: 36rpx;
  padding-bottom: 70rpx;
}
view.header{
   width: 95%;
   margin:0 auto;
   background:rgba(255,255,255,1);
   border-radius:8rpx;
   padding-top: 30rpx;
   padding-bottom: 24rpx;
}
view.header>text{
   display: block;
}
text.left{
  margin-left: 25rpx;
}
text.open{
   font-weight:bold;
   color:rgba(0,0,0,1);
   font-size: 28rpx;
   margin-bottom:30rpx; 
}
text.place{
  font-weight:500;
  color:rgba(0,0,0,1);
  font-size: 28rpx;
     margin-bottom:30rpx; 
}
text.box{
  width: 93%;
  margin: 0 auto;
  font-size: 30rpx;
  text-align: center;
}
text.date{
  font-weight: 500;
  background:rgba(255,222,213,1);
  line-height: 69rpx;
  border-top:1px solid rgba(253,191,175,1);
  border-right: 1px solid rgba(253,191,175,1);
  border-left: 1px solid rgba(253,191,175,1);
}
text.time{
  /* background:rgba(255,222,213,1); */
  line-height: 69rpx;
  font-weight: bold;
  border-bottom:1px solid rgba(253,191,175,1);
  border-right: 1px solid rgba(253,191,175,1);
  border-left: 1px solid rgba(253,191,175,1);
}
text.notice{
  font-size:24rpx;
  font-weight:400;
  color:rgba(83,145,249,1);
  margin-top:24rpx; 
}

/* main */

view.main{
  /* height: 1000rpx; */
  background: #fff;
  border-radius:8rpx;
  width: 89%;
  margin:0 auto;
  padding: 0 24rpx 30rpx 24rpx;
}
view.main>text{
    display: block;
}
text.sice{
  margin-top:30rpx;
}
view.wenben{
    font-weight:400;
    color:rgba(101,101,101,1);
    font-size: 24rpx;
}
text.other{
  margin-top:30rpx;
}
view.image>image{
  display: block;
  height:301rpx;
  border-radius:10rpx;
  margin: 43rpx 0rpx;
}
view.picture>view{
  display: inline-block;
  width: 50%;
  box-sizing: border-box;
  padding: 10rpx 10rpx;
}
view.picture>view>image{
  border-radius:10rpx;
  width: 100%;
  height: 160rpx;
}