/* pages/shouyin/shouyin.wxss */

page {
  background: rgba(244, 244, 244, 1);
  font-size: 30rpx;
}

view.header {
  background: linear-gradient(90deg, rgba(63, 106, 223, 1), rgba(73, 136, 224, 1), rgba(86, 166, 225, 1));
  height: 280rpx;
  color: white;
  padding-top: 30rpx;
}

view.header>image {
  height: 100rpx;
  width: 100rpx;
  display: block;
  margin: 0 auto;
}

view.header>text {
  display: block;
  text-align: center;
  margin-bottom: 20rpx;
  font-size: 36rpx;
  font-weight: 400;
}

view.header>view {
  text-align: center;
  margin-top: 20rpx;
  font-size: 36rpx;
  font-weight: 500;
}

/* 票的信息展示 */

view.dingdan {
  margin-top: 40rpx;
}

view.dingdan_body {
  background: #fff;
  /* height: 193rpx; */
  width: 95%;
  margin: 0 auto;
  padding-top: 20rpx;
  border-radius: 8rpx 8rpx;
  position: relative;
  padding-bottom: 20rpx;
}

view.content {
  height: 100%;
  width: 75%;
  margin: 0 auto;
}

view.content>view>text {
  font-weight: 500;
  color: rgba(142, 142, 142, 1);
}

view.content>view {
  margin-top: 20rpx;
}

view.scen_name>text {
  font-size: 30rpx !important;
  display: block;
  font-weight: 500 !important;
  color: rgba(89, 89, 89, 1) !important;
}

image.logo_title {
  height: 40rpx;
  width: 43rpx;
  display: block;
  position: absolute;
  top: 40rpx;
  left: 30rpx;
}

view.money {
  font-weight: 500;
  color: rgba(236, 0, 0, 1);
  font-size: 32rpx;
  position: absolute;
  bottom: 20rpx;
  right: 100rpx;
}

image.back_home {
  height: 40rpx;
  width: 25rpx;
  display: block;
  position: absolute;
  top: 80rpx;
  right: 30rpx;
}

view.button {
  margin-top: 60rpx;
}

/* 再次支付 */

view.pay_agin {
  height: 90rpx;
  background: linear-gradient(90deg, rgba(63, 106, 223, 1), rgba(73, 136, 224, 1), rgba(86, 166, 225, 1));
  border-radius: 40rpx;
  line-height: 90rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  font-size: 36rpx;
  width: 678rpx;
  margin: 0 auto;
  text-align: center;
  box-shadow: 0rpx 15rpx 30rpx 1rpx rgba(86, 166, 225, 1);
}
